#!/bin/bash -e

# Habilita jemalloc para reduzir consumo de memÃ³ria e latÃªncia
if [ -z "${LD_PRELOAD+x}" ] && [ -f "$(find /usr/lib -name 'libjemalloc.so.2' | head -n 1)" ]; then
  export LD_PRELOAD="$(find /usr/lib -name 'libjemalloc.so.2' | head -n 1)"
fi

# Aguarda o banco de dados estar disponÃ­vel antes de continuar
echo "â³ Aguardando o banco de dados estar pronto..."
until pg_isready -h db -p 5432 -U "$POSTGRES_USER"; do
  sleep 1
done
echo "âœ… Banco de dados pronto!"

# Rodar `db:prepare` sempre antes de iniciar o container
echo "ğŸ”„ Executando migrations e preparando o banco de dados..."
./bin/rails db:prepare

# Executa o comando original
exec "${@}"
